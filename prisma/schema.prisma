generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {

  id BigInt @id
  name String
  email String
  password String
  wallet Wallet[]

}

model Wallet {
  id BigInt @id
  balance BigInt
  user Users @relation(fields: [userId], references: [id])
  userId BigInt
}
